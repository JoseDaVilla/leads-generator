# Set proper NODE_ENV
NODE_ENV=production

# Application Configuration 
NEXT_PUBLIC_APP_URL=https://leads-generator-8en5.onrender.com
PORT=3000

# Export Configuration
EXPORT_DIRECTORY=./exports

# Enable dynamic page rendering
NEXT_PUBLIC_FORCE_DYNAMIC=true

# Use a more conservative memory limit setting to avoid OOM errors
NODE_OPTIONS="--max-old-space-size=2048"

# Enable garbage collection exposure (allows manual GC calls)
NODE_FLAGS="--expose-gc"

# Stream configuration for Excel exports
EXCELJS_STREAM_WRITER=true
