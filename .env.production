# Set proper NODE_ENV
NODE_ENV=production

# Application Configuration 
NEXT_PUBLIC_APP_URL=https://leads-generator-8en5.onrender.com
PORT=3000

# Export Configuration
EXPORT_DIRECTORY=./exports

# Enable dynamic page rendering
NEXT_PUBLIC_FORCE_DYNAMIC=true

#! Optimized memory settings for 0.5 CPU environment
NODE_OPTIONS="--max-old-space-size=3072"

#! Enable garbage collection exposure and optimize V8
NODE_FLAGS="--expose-gc --max-old-space-size=3072 --optimize-for-size --gc-interval=100"

#! Enable worker threads
WORKER_THREADS_ENABLED=true
MAX_WORKER_THREADS=2
